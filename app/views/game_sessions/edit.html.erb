<h1>ゲーム設定変更</h1>

<%= form_with model: @game_session, local: true do |form| %>
  <% if @game_session.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@game_session.errors.count, "error") %> prohibited this game session from being saved:</h4>
      <ul>
        <% @game_session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "ゲーム名", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "更新", class: "btn btn-primary" %>
    <%= link_to "戻る", @game_session, class: "btn btn-secondary" %>
    <%= link_to "削除", @game_session, method: :delete, class: "btn btn-danger", 
                confirm: "本当に削除しますか？" %>
  </div>
<% end %>