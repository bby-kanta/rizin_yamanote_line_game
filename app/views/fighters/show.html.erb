<div class="d-flex justify-content-between align-items-start mb-4">
  <div>
    <h1><%= @fighter.display_name %></h1>
  </div>
  <% if user_signed_in? %>
    <% if current_user.admin? %>
      <div>
        <%= link_to "特徴管理", features_fighter_path(@fighter), class: "btn btn-info me-2" %>
        <%= link_to "編集", edit_fighter_path(@fighter), class: "btn btn-primary me-2" %>
        <%= button_to "削除", @fighter, method: :delete, 
                      confirm: "#{@fighter.display_name}を削除しますか？", 
                      class: "btn btn-danger" %>
      </div>
    <% else %>
      <div class="alert alert-info">
        <small>管理者のみ編集・削除・特徴管理が可能です</small>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-warning">
      <small>ログインが必要です</small>
    </div>
  <% end %>
</div>

<div class="card">
  <div class="card-body">
    <% if @fighter.image_url.present? %>
      <div class="row">
        <div class="col-md-3">
          <%= image_tag @fighter.image_url, 
                        class: "img-fluid rounded mb-3",
                        alt: @fighter.display_name %>
        </div>
        <div class="col-md-9">
    <% end %>
    
    <h5 class="card-title">選手情報</h5>
    <dl class="row">
      <dt class="col-sm-3">本名</dt>
      <dd class="col-sm-9"><%= @fighter.full_name %></dd>
      
      <dt class="col-sm-3">本名（英語）</dt>
      <dd class="col-sm-9"><%= @fighter.full_name_english %></dd>
      
      <dt class="col-sm-3">本名（ひらがな）</dt>
      <dd class="col-sm-9"><%= @fighter.full_name_hiragana %></dd>
      
      <% if @fighter.ring_name.present? %>
        <dt class="col-sm-3">リングネーム</dt>
        <dd class="col-sm-9"><%= @fighter.ring_name %></dd>
        
        <% if @fighter.ring_name_hiragana.present? %>
          <dt class="col-sm-3">リングネーム（ひらがな）</dt>
          <dd class="col-sm-9"><%= @fighter.ring_name_hiragana %></dd>
        <% end %>
      <% end %>
      
      <dt class="col-sm-3">状態</dt>
      <dd class="col-sm-9">
        <span class="badge <%= @fighter.is_active ? 'bg-success' : 'bg-danger' %>">
          <%= @fighter.is_active ? '現役' : '非現役' %>
        </span>
      </dd>
      
      <% if @fighter.image_url.present? %>
        <dt class="col-sm-3">画像URL</dt>
        <dd class="col-sm-9">
          <small class="text-muted"><%= truncate(@fighter.image_url, length: 50) %></small>
        </dd>
      <% end %>
    </dl>
    
    <% if @fighter.image_url.present? %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-3">
  <%= link_to "戻る", fighters_path, class: "btn btn-secondary" %>
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to "新しい選手を追加", new_fighter_path, class: "btn btn-success ms-2" %>
  <% end %>
</div>
