<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>🔍 選手当てクイズ</h1>
    <%= link_to "🆕 新しいクイズを作成", new_quiz_session_path, class: "btn btn-primary btn-lg" %>
  </div>

  <% if @quiz_sessions.any? %>
    <div class="row">
      <div class="col-md-12">
        <h3 class="mb-3">📋 参加可能なクイズ</h3>
        <div class="row">
          <% @quiz_sessions.each do |quiz| %>
            <div class="col-md-6 mb-3">
              <div class="card">
                <div class="card-header bg-primary text-white">
                  <div class="d-flex justify-content-between align-items-center">
                    <span>クイズ #<%= quiz.id %></span>
                    <span class="badge bg-light text-dark">
                      <%= quiz.waiting? ? '待機中' : quiz.started? ? 'プレイ中' : '終了' %>
                    </span>
                  </div>
                </div>
                <div class="card-body">
                  <p class="card-text">
                    <strong>作成者:</strong> <%= quiz.creator.name %><br>
                    <strong>参加者:</strong> <%= quiz.participants.count %>人<br>
                    <strong>作成日時:</strong> <%= quiz.created_at.strftime("%m/%d %H:%M") %>
                  </p>
                  <div class="d-grid gap-2">
                    <% if current_user.joined_quiz?(quiz) %>
                      <%= link_to "クイズに入る", quiz, class: "btn btn-primary" %>
                    <% elsif quiz.waiting? && !current_user.current_quiz_session %>
                      <%= button_to "参加する", join_quiz_session_path(quiz), method: :patch, class: "btn btn-success" %>
                    <% elsif current_user.current_quiz_session %>
                      <button class="btn btn-secondary" disabled>他のクイズに参加中</button>
                    <% else %>
                      <%= link_to "詳細を見る", quiz, class: "btn btn-outline-primary" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h4 class="alert-heading">現在参加可能なクイズはありません</h4>
      <p>新しいクイズを作成して、友達と知識を競いましょう！</p>
      <%= link_to "🆕 クイズを作成", new_quiz_session_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if @my_sessions.any? %>
    <hr class="my-5">
    <h3 class="mb-3">📚 あなたが作成したクイズ</h3>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>クイズID</th>
            <th>対象選手</th>
            <th>状態</th>
            <th>参加者数</th>
            <th>勝者</th>
            <th>作成日時</th>
            <th>アクション</th>
          </tr>
        </thead>
        <tbody>
          <% @my_sessions.each do |quiz| %>
            <tr>
              <td>#<%= quiz.id %></td>
              <td>
                <% if quiz.ended? %>
                  <%= quiz.target_fighter.display_name %>
                <% else %>
                  <span class="text-muted">???</span>
                <% end %>
              </td>
              <td>
                <% if quiz.waiting? %>
                  <span class="badge bg-warning text-dark">待機中</span>
                <% elsif quiz.started? %>
                  <span class="badge bg-success">プレイ中</span>
                <% else %>
                  <span class="badge bg-secondary">終了</span>
                <% end %>
              </td>
              <td><%= quiz.participants.count %>人</td>
              <td>
                <% if quiz.winner_user %>
                  <span class="badge bg-primary">
                    <%= quiz.winner_user.name %>
                  </span>
                <% else %>
                  -
                <% end %>
              </td>
              <td><%= quiz.created_at.strftime("%m/%d %H:%M") %></td>
              <td>
                <%= link_to "詳細", quiz, class: "btn btn-sm btn-outline-primary" %>
                <% if quiz.waiting? && quiz.participants.count >= 2 %>
                  <%= button_to "開始", start_quiz_session_path(quiz), method: :patch, class: "btn btn-sm btn-success" %>
                <% elsif quiz.waiting? %>
                  <span class="text-muted small">参加者待ち</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>