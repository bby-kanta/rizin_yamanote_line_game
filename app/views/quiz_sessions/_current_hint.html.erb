<% if hint %>
  <div class="alert alert-light">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <span class="badge bg-secondary me-2"><%= hint.category_name %></span>
        <span class="badge bg-info">レベル <%= hint.level %> - <%= hint.level_text %></span>
      </div>
    </div>
    <h4 class="mt-3"><%= hint.feature %></h4>
  </div>
<% else %>
  <p class="text-muted">ヒントがありません</p>
<% end %>